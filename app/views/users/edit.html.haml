- provide(:title, "processor | Profile edit")
%h1 Sign up
= form_for @user, url: user_path, method: :patch, html: {class: 'ui form'} do |f|
  .field
    = render 'shared/error_messages', object: f.object

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :email
    = f.email_field :email

  .field
    = f.label :password
    = f.password_field :password

  .field
    = f.label :password_confirmation, "Confirmation"
    = f.password_field :password_confirmation

  .field
    = f.submit "Save", class: 'ui submit button'
