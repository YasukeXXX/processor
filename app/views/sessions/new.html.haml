- provide(:title, "processor | login")
%h1 Log in
= form_for :session, url: login_path, html: {class: 'ui form'}do |f|
  .field
    = f.label :email
    = f.email_field :email

  .field
    = f.label :password
    = f.password_field :password

  .field.ui.checkbox
    = f.label :remember_me, 'Remember me on this computer'
    = f.check_box :remember_me

  .field
    = f.submit "Login", class: 'ui submit button'

= link_to 'Sign up Now', signup_path
